<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_BillNo_GoldInOutListView"
            style="@style/FieldTextViewWidth0dp"
            android:textSize="16sp"
            android:hint="Bill No missing" />

        <TextView
            android:id="@+id/tv_BillBook_GoldInOutListView"
            style="@style/FieldTextViewWidth0dp"
            android:textSize="16sp"
            android:hint="Bill book missing" />

        <TextView
            android:id="@+id/tv_LoginId_GoldInOutListView"
            style="@style/FieldTextViewWidth0dp"
            android:textSize="16sp"
            android:hint="Login Id missing" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_DeliverDate_GoldInOutListView"
            style="@style/FieldTextViewWidth0dpColorAccent"
            android:textSize="16sp"
            android:hint="Delivery date missing" />

        <TextView
            android:id="@+id/tv_GoldIn_GoldInOutListView"
            style="@style/FieldTextViewWidth0dpColorAccent"
            android:textSize="16sp"
            android:hint="Gold In missing" />

        <TextView
            android:id="@+id/tv_GoldOut_GoldInOutListView"
           style="@style/FieldTextViewWidth0dpColorAccent"
            android:textSize="16sp"
            android:hint="Gold Out missing" />

    </LinearLayout>

</LinearLayout>