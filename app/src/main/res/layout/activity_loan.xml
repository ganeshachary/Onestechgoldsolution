<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onestechsolution.onestechgoldsolution.Activity.LoanHomeActivity">


    <Button
        android:id="@+id/btn_newloan_loan_activity"
        style="@style/ButtonWithHeight0dp"
        android:drawableLeft="@drawable/ic_loan"
        android:onClick="openNewLoanActivity"
        android:text="New Loan"/>


    <Button
        style="@style/ButtonWithHeight0dp"
        android:background="@drawable/yellow_button"
        android:drawableLeft="@drawable/ic_loan_list"
        android:onClick="openExistingLoanActivity"
        android:text="existing Loan"/>


</LinearLayout>
